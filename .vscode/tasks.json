{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "CMake: configure",
        "type": "shell",
        "command": "cmake",
        "args": [
          "-S", "${workspaceFolder}",
          "-B", "${workspaceFolder}/build"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "group": "build"
      },
      {
        "label": "CMake: build",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build", "${workspaceFolder}/build"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "CMake: configure + build",
        "dependsOn": ["CMake: configure", "CMake: build"],
        "dependsOrder": "sequence",
        "problemMatcher": [],
        "group": "build"
      }
    ]
  }
  