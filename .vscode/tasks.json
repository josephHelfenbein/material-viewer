{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "Build Windows Executable",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/include",
                "-I/C/msys64/ucrt64/include",
                "-I/usr/include/python3.12",
                "-L${workspaceFolder}/lib",
                "-L/C/msys64/ucrt64/lib",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/glad.c",
                "-lzip",
                "-lfreetype",
                "-lpython3.12",
                "-lglfw3dll",
                "-lcomdlg32",
                "-o",
                "${workspaceFolder}/build/materialviewer.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: C:/C:/path/to/g++.exe"
        },
        {
            "label": "Build Linux Executable",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/glad.c",
                "-DQT_WIDGETS_LIB",
                "-I/usr/include/qt/QtWidgets",
                "-I/usr/include/qt",
                "-I/usr/include/python3.12",
                "-DQT_GUI_LIB",
                "-I/usr/include/qt/QtGui",
                "-DQT_CORE_LIB",
                "-I/usr/include/qt/QtCore",
                "-lzip",
                "-lfreetype",
                "-lQt5Widgets",
                "-lQt5Gui",
                "-lQt5Core",
                "-lpython3.12",
                "-lglfw",
                "-ldl",
                "-lm",
                "-o",
                "${workspaceFolder}/build/materialviewer"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
